{
    "root": true,
    "env": {
        "jest": true,
        "node": true,
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "no-console": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "no-unused-vars": 2,
        "import/named": 1,
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ]
    }
}